<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MessageReadCommandSurface">
  <Id>abcd1234-5678-90ef-ghij-klmn12345678</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Mon Complément Word</ProviderName>
  <DefaultLocale>fr-FR</DefaultLocale>
  <DisplayName DefaultValue="Ruban simplifié"/>
  <Description DefaultValue="Un complément qui simplifie les commandes du ruban Word"/>
  <Hosts>
    <Host Name="Document"/>
  </Hosts>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://mon-site/taskpane.html"/>
  </DefaultSettings>
  <ExtensionPoint xsi:type="MessageReadCommandSurface">
    <OfficeTab id="TabHome">
      <Group id="SimplifiedGroup" label="Commandes rapides">
        <Control xsi:type="Button" id="btnInsertText">
          <Label resid="btnInsertTextLabel"/>
          <Supertip>
            <Title resid="btnInsertTextLabel"/>
            <Description resid="btnInsertTextDesc"/>
          </Supertip>
          <Icon>
            <bt:Image size="16" resid="icon16"/>
          </Icon>
          <Action xsi:type="ShowTaskpane">
            <SourceLocation resid="taskpaneUrl"/>
          </Action>
        </Control>
      </Group>
    </OfficeTab>
  </ExtensionPoint>
</OfficeApp>
